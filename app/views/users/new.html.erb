<%= flash[:errors] %>

<div class="form">
<h2>Register new user</h2>
<%= form_for @user, html: { multipart: true } do |f|%>
<label for="field1"><span>Username<span class="required">*</span></span> <%= f.text_field :username, placeholder: "Username" %></label>
<label for="field2"><span>Email<span class="required">*</span></span><%= f.text_field :email, placeholder: "Email" %></label>
<label for= "field3"><span>Password</span><%= f.password_field :password, placeholder: "Password" %></label>
<label for= "field4"><span>Avatar</span> <%= f.file_field :avatar %></label>
<label><span>&nbsp;</span> <%= f.submit "Register" %></label>
<% end %>
</div>