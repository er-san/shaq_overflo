<ul class = "content" >

<% @questions.each do |q| %>
  <li class = "question-header"><%= q.total_points %> | <%= link_to q.title, question_path(q) %></li>
  <ul>
    <li class = "question-content"><%= q.body %></li>
    <li class="username">asked by <%= link_to q.user.username, user_path(q.user.id) %></li>
    <li class='username'><%= time_ago_in_words(q.updated_at) %> ago</li>
  </ul>
<% end %>

</ul>


