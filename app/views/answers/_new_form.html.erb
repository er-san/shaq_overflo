<%= flash[:errors] %>
<%= form_for [@question, answer] do |f|%>
 <p><%= f.text_area :body, placeholder: 'Answer please', cols: '90', rows: '10' %></p>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :question_id, value: @question.id %>
<p><%= f.submit "Submit" %></p>
<% end %>