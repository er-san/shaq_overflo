<%= flash[:errors] %>
<div class="form">
<%= form_for @comment, url: answer_comments_path(@answer), class: 'new-comment-form' do |f|%>
<label for="field2"><span>Content <span class="required">*</span></span><%= f.text_area :body, placeholder: 'comment here', :rows => "10", :cols => "40" %></label>
  <%= f.hidden_field :user_id, value: session[:user_id]%>
  <%= f.hidden_field :answer_id, value: @answer.id %>
<label><span>&nbsp;</span> <%= f.submit "Comment" %></label>
<% end %>
</div>