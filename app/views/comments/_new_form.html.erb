<%= flash[:errors] %>
<%= form_for @comment, url: answer_comments_path(@answer), class: 'new-comment-form' do |f|%>
<p><%= f.text_area :body, placeholder: 'comment here', cols: '90', rows: '2' %></p>
 <%= f.hidden_field :user_id, value: session[:user_id]%>
 <%= f.hidden_field :answer_id, value: @answer.id %>
<p><%= f.submit "Comment" %></p>
<% end %>